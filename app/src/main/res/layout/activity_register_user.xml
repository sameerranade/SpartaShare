<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#000000"
    tools:context="com.cmpe277project.spartashare.RegisterUserActivity">

    <TextView android:text="Welcome sameerranade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textColor="#ffffff"
        android:layout_marginTop="120sp"
        android:id="@+id/twitterusernametxtview"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/emailedittxtview"
        android:height="60sp"
        android:width="350sp"
        android:textSize="20sp"
        android:textColor="#ffffff"
        android:layout_marginTop="200sp"
        android:hint = "Please enter your email address"
        android:textColorHint="#ffffff"
        android:visibility="invisible"
        android:layout_alignParentEnd="true" />

    <Button
        android:background="#999999"
        android:textColor="#ffffff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/registerbtn"
        android:text="Continue to Register"
        android:layout_below="@+id/userImage"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="41dp" />

    <com.facebook.widget.ProfilePictureView
        android:id="@+id/userImage"
        android:layout_width="120sp"
        android:layout_height="120sp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
