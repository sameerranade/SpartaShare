<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="wrap_content" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.cmpe277project.spartashare.activities.UploadImageWithInfo">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/iv_uploadImage"
            android:layout_width="350sp"
            android:layout_height="350sp"
            android:layout_weight="1"
            android:layout_gravity="center"/>
    </LinearLayout>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:tag="LableForCaption"
                    android:text="Caption"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:enabled="false"/>
                <EditText
                    android:id="@+id/et_caption"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:cursorVisible="true"
                    android:textSize="15sp" />
        </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:tag="LableForLocation"
                    android:text="Location"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:enabled="false"/>
                <TextView
                    android:id="@+id/et_location"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:layout_width="100sp"
                    android:layout_height="130sp"
                    android:layout_weight="2"
                />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:tag="LableForTags"
                    android:text="Notes"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:enabled="false"/>
                <EditText
                    android:id="@+id/et_tags"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:cursorVisible="true"
                    android:textSize="15sp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="8"
                    android:tag="LableForDirectory"
                    android:text="Album"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:enabled="false"/>
                <Spinner
                    android:id="@+id/sr_directory"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:background="#ffffff"
                />
    </LinearLayout>
    <Button
        android:id="@+id/btn_upload"
        android:background="@drawable/shape"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Upload" />
    </LinearLayout>
</ScrollView>